    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.0" />

    <LinearLayout
        android:layout_width="238dp"
        android:layout_height="275dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.882">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:text="Awesome! \nYou got it all right! \nClaim your digital sticker!"
            android:textColor="#3F51B5"
            android:textSize="10sp"
            app:fontFamily="@font/gillsanub" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSticker"
                android:layout_width="200dp"
                android:layout_height="125dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/animals" />

            <TextView
                android:id="@+id/textStickerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginBottom="1dp"
                app:fontFamily="@font/antquab"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/btn_home" />

            <ImageView
                android:id="@+id/buttonClaim"
                android:layout_width="105dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:onClick="claimSticker"
                app:srcCompat="@drawable/btn_claim" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="1.0" />

